{
    "env": {
        "browser": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "linebreak-style" : "off",
        "no-use-before-define": "off",
        "max-len" : "off",
        "react/prop-types": "off",
        "no-param-reassign": "off",
        "react/jsx-props-no-spreading": "off"
    }
}